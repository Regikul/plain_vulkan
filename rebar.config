{min_otp_version, "20.2"}.
{erl_opts, []}.
{deps, []}.
{provider_hooks, [
  {pre, [
    {compile, {rust, compile}}
  ]}
]}.
{plugins, [
  {rebar3_rust, {git, "https://gitlab.com/sdwolfz/rebar3_rust.git", {branch, "master"}}}
]}.
{port_env, [
%%  {"x86_64.*-linux", "DRV_LDFLAGS", "$DRV_LDFLAGS -llibvulkan"}
  {"CFLAGS", "$CFLAGS -std=gnu11"},
  {"DRV_LDFLAGS", "$DRV_LDFLAGS -L\"/usr/lib/x86_64-linux-gnu/\" -lvulkan"}
]}.
